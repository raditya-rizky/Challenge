<!DOCTYPE html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <!-- Bootstrap CSS -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
      crossorigin="anonymous"
    />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.2/font/bootstrap-icons.css"
    />
    <title><%= pageTitle %></title>
  </head>
  <body style="background-color: rgb(22, 22, 22)">
    <div class="container mt-5">
      <div class="row justify-content-center text-light">
        <div class="col-md-7">
          <h3 class="my-3">User Detail</h3>
          <% if (upd.length !== 0) { %>
          <div class="row justify-content-center">
            <div class="col-md-5 text-center">
              <div class="alert alert-success" role="alert"><%= upd %></div>
            </div>
          </div>
          <% } %>
          <div class="justify-content-between">
            <a class="btn btn-secondary" href="/users" role="button">
              <i class="bi-arrow-left"></i> Back to Users List
            </a>
            <a
              class="btn btn-primary"
              href="/user/<%= userOne.id %>/edit"
              role="button"
            >
              <i class="bi-pencil-fill"></i> Edit
            </a>
          </div>
          <div class="table-responsive mt-3">
            <table
              class="table table-bordered table-dark table-striped table-hover"
            >
              <tbody>
                <tr>
                  <th scope="row" style="width: 50%">id</th>
                  <td><%= userOne.id %></td>
                </tr>
                <tr>
                  <th scope="row">Username</th>
                  <td><%= userOne.username %></td>
                </tr>
                <tr>
                  <th scope="row">Password</th>
                  <td><%= userOne.password %></td>
                </tr>
              </tbody>
            </table>
          </div>
          <h5 class="my-3">Profile:</h5>
          <div class="table-responsive mt-3">
            <table
              class="table table-bordered table-dark table-striped table-hover"
            >
              <tbody>
                <tr>
                  <th scope="row" style="width: 50%">Name</th>
                  <td><%= userOne.profile.name %></td>
                </tr>
                <tr>
                  <th scope="row">Address</th>
                  <td><%= userOne.profile.address %></td>
                </tr>
                <tr>
                  <th scope="row">Date of Birth</th>
                  <td><%= userOne.profile.dateOfBirth %></td>
                </tr>
              </tbody>
            </table>
          </div>
          <h5 class="my-3">User History:</h5>
          <div class="table-responsive mt-3">
            <% userOne.history.slice().reverse().forEach((element, index) => {
            %>
            <table
              class="table table-bordered table-dark table-striped table-hover"
            >
              <tbody>
                <tr>
                  <th scope="row" style="width: 50%">Profile Updated At:</th>
                  <td><%= element.updatedAt %></td>
                </tr>
              </tbody>
            </table>
            <% }) %>
          </div>
        </div>
      </div>
    </div>

    <!-- Optional JavaScript; choose one of the two! -->

    <!-- Option 1: Bootstrap Bundle with Popper -->
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
      crossorigin="anonymous"
    ></script>

    <!-- Option 2: Separate Popper and Bootstrap JS -->
    <!--
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.10.2/dist/umd/popper.min.js" integrity="sha384-7+zCNj/IqJ95wo16oMtfsKbZ9ccEh31eOz1HGyDuCQ6wgnyJNSYdrPa03rtR1zdB" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.min.js" integrity="sha384-QJHtvGhmr9XOIpI6YVutG+2QOK9T+ZnN4kzFN1RtK3zEFEIsxhlmWl5/YESvpZ13" crossorigin="anonymous"></script>
    -->
  </body>
</html>
